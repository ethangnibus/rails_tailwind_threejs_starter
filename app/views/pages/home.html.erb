<div class="flex flex-col h-screen w-screen bg-slate-800">
  <div class="h-14 bg-slate-700">Navbar</div>
  <div class="flex flex-row grow bg-slate-600">
    <div class="w-1/3 overflow-auto flex flex-col bg-slate-500">Toolbar
      <div class="h-20 bg-slate-700">
        <label for="x-slider" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Change the vector's X value</label>
        <input id="x-slider" type="range" value="0" class="w-10/12 h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer dark:bg-slate-100 m-4">
      </div>
      <div class="h-20 bg-slate-800">
        <label for="y-slider" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Change the vector's Y value</label>
        <input id="y-slider" type="range" value="100" class="w-10/12 h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer dark:bg-slate-100 m-4">
      </div>
      <div class="h-20 bg-slate-700">
        <label for="z-slider" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Change the vector's Z value</label>
        <input id="z-slider" type="range" value="100" class="w-10/12 h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer dark:bg-slate-100 m-4">
      </div>
      <div class="h-20 bg-slate-800">
        <label for="alpha-slider" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Change the alpha value of alpha*u</label>
        <input id="alpha-slider" type="range" value="68.75" class="w-10/12 h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer dark:bg-slate-100 m-4">
      </div>
      <div class="h-20 bg-slate-700">1</div>
      <div class="h-20 bg-slate-800">2</div>
      <div class="h-20 bg-slate-700">3</div>
    </div>
    <canvas class="w-2/3" data-controller="game"></canvas>
  </div>
</div>
